<meta name="twitter:card" value="summary" />
<meta name="twitter:site" value="<%=twitter_screen_name%>" />
<meta content="<%= url %>" property="twitter:url"/>
<meta property="twitter:title" content="<%= truncate(title, length: 70) %>" />
<meta property="twitter:description" content="<%= truncate(description, length: 200) %>" />
<meta property="twitter:image" content="<%= image_url %>" />
